<?xml version="1.0" encoding="utf-8"?>
<xyz.wbsite.wbui.base.ui.layout.WBUISquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ui_drawable_click">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <xyz.wbsite.wbui.base.ui.image.WBUISquareImageView
            android:id="@+id/imgIcon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/padding_5"
            android:layout_margin="@dimen/margin_10"
            android:scaleType="fitXY"
            app:weight_height="1"
            app:weight_width="1" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_5"
            android:textColor="#2e2e2e"
            android:textSize="@dimen/font_size12" />
    </LinearLayout>
</xyz.wbsite.wbui.base.ui.layout.WBUISquareLayout>